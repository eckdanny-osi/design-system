{
  "name": "@test/design-system",
  "private": true,
  "workspaces": {
    "nohoist": [
      "**/react-scripts",
      "**/react-scripts/**",
      "libs/www/**",
      "**/libs/www",
      "libs/rails_app/**"
    ],
    "packages": [
      "libs/*"
    ]
  },
  "scripts": {
    "test": "jest",
    "test:all": "CI=true lerna run --parallel test ",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "guide": "cd libs/www && SKIP_PREFLIGHT_CHECK=true yarn react-scripts start",
    "build:libs": "lerna run --scope @cwds/* build",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "prebuild": "lerna bootstrap",
    "build": "yarn build:libs && lerna run --scope www --stream build"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.4.11",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "lerna": "^3.1.4",
    "node-sass": "^4.9.3",
    "node-sass-tilde-importer": "^1.0.2",
    "react": "^16.4",
    "react-dom": "^16.4",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "yargs": "^12.0.2"
  },
  "dependencies": {}
}
