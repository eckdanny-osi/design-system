{
  "name": "@cwds/core",
  "version": "0.3.1",
  "description": "> TODO: description",
  "author": "Danny Eck <danny.eck@osi.ca.gov>",
  "homepage": "",
  "license": "ISC",
  "main": "dist/core.cjs.js",
  "module": "dist/core.js",
  "style": "dist/styles.css",
  "scripts": {
    "test": "echo \"No tests in @cwds/core\" && exit 0",
    "prebuild": "rimraf dist",
    "build": "run-p build:esm build:css build:cjs",
    "build:cjs": "rollup js/core.js -c rollup.config.js --format cjs --file dist/core.cjs.js",
    "build:esm": "babel js --out-dir dist --ignore \"src/**/*.stories.js\",\"src/**/*.test.js\",\"__tests__\"",
    "build:css": "node-sass -r -o dist --source-map true --importer ../../sass-importers.js scss",
    "prebuild:watch": "yarn prebuild",
    "build:watch": "run-p build:watch:*",
    "build:watch:css": "yarn build:css && yarn build:css -w",
    "build:watch:js": "yarn build:esm --watch",
    "build:watch:js-sass": "onchange js/**/*.js -- touch -c scss/_custom.scss"
  },
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "bootstrap": "^4.1.3"
  },
  "peerDependencies": {
    "bootstrap": "^4.1.3"
  },
  "devDependencies": {
    "color": "^3.1.0"
  }
}
