{
  "name": "@cwds/components",
  "version": "0.3.2",
  "description": "> TODO: description",
  "author": "Danny Eck <danny.eck@osi.ca.gov>",
  "homepage": "https://cws-cares.netlify.com",
  "bugs": {
    "url": "https://github.com/ca-cwds/design-system/issues"
  },
  "license": "ISC",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "prebuild": "rimraf dist",
    "build": "run-p build:es build:cjs build:css",
    "build:es": "babel src --out-dir dist --ignore \"src/**/*.stories.js\",\"src/**/*.test.js\"",
    "build:cjs": "rollup src/index.js -c rollup.config.js --format cjs --file dist/index.cjs.js",
    "build:css": "node-sass -r -o dist --source-map true --importer ../../sass-importers.js src",
    "prebuild:watch": "rimraf dist",
    "build:watch": "run-p build:watch:*",
    "build:watch:es": "yarn build:es -w",
    "build:watch:css": "run-p build:watch:css:*",
    "build:watch:css:deps": "onchange '../core/scss/**/*.scss' -- yarn build:css",
    "build:watch:css:self": "sleep 1 && yarn build:css && yarn build:css -w"
  },
  "dependencies": {
    "@cwds/core": "^0.3.2",
    "@cwds/icons": "^0.3.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.5",
    "@fortawesome/free-solid-svg-icons": "^5.4.0",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "bootstrap": "^4.1.3",
    "classnames": "^2.2.6",
    "lodash.omit": "^4.5.0",
    "lodash.uniqueid": "^4.0.1",
    "react-select": "^1.3",
    "react-table": "^6.8.6",
    "reactstrap": "^6.5.0"
  },
  "devDependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.4",
    "react-display-name": "^0.2.4"
  },
  "peerDependencies": {
    "react": "^16.4",
    "react-dom": "^16.4"
  }
}
